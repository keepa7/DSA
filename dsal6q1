#include <iostream>
using namespace std;

int fact(int n) {
    if (n == 0) {
        cout << "fact(0) = 1 (base case)" << endl;
        return 1;
    } else {
        cout << "fact(" << n << ") = " << n << " * fact(" << n - 1 << ")" << endl;
        return n * fact(n - 1);
    }
}

int main() {
    int n;
    cout << "Enter the number: ";
    cin >> n;

    cout << "\nStep-by-step factorial calculation:\n" << endl;
    int result = fact(n);

    cout << "\nFactorial of " << n << " (" << n << "!) = " << result << endl;

    return 0;
}
